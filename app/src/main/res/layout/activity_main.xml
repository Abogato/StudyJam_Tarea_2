<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo2"
    tools:context="com.abogato.calculadora.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CALCULADORA"
        android:textStyle="bold"
        android:textColor="#8351784d"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="45dp"


        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/num1"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Ingrese Numero"
            android:inputType="numberSigned"
            android:textColor="#d7e2dee4"
            android:textColorHint="#6196b996"
            />
        <EditText
            android:id="@+id/num2"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Ingrese Numero"
            android:inputType="numberSigned"
            android:textColor="#d7e2dee4"
            android:textColorHint="#6196b996"
            />

    </LinearLayout>
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/resultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="55dp"
            android:hint="0."
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <Button
        android:background="@drawable/estilo"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:onClick="sumar"
        android:textColor="#ebebf1"
        android:text="+"
        android:textSize="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_margin="10dp"

        />
        <Button
            android:background="@drawable/estilo"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:onClick="restar"
            android:text="-"
            android:textColor="#ebebf1"
            android:textSize="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_margin="10dp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:background="@drawable/estilo"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:onClick="multiplicar"
            android:text="*"
            android:textColor="#ebebf1"
            android:textSize="40dp"

            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_margin="10dp"
            />
        <Button
            android:background="@drawable/estilo"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:onClick="dividir"
            android:text="/"
            android:textColor="#ebebf1"
            android:textSize="40dp"

            android:layout_margin="10dp"
            />
    </LinearLayout>
</LinearLayout>
